---
extends: default

rules:
  braces:
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  line-length:
    max: 160
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
